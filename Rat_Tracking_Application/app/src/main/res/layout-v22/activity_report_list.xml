<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_collapseParallaxMultiplier="1.0"
    tools:context="area52.rat_tracking_application.controllers.ReportListActivity" >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:id="@+id/textView_rat_reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            android:text="@string/scroll_through_report_list"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="142dp"
            tools:targetApi="lollipop" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="354dp"
        android:layout_height="165dp"
        android:layout_margin="@dimen/text_margin"
        android:nestedScrollingEnabled="true"
        android:accessibilityTraversalAfter="@+id/content"
        android:accessibilityTraversalBefore="@+id/content"
        android:saveEnabled="true"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textIsSelectable="true"
        tools:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <Button
        android:id="@+id/log_out_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/go_to_report_entry_screen_button"
        android:elevation="11dp"
        android:fitsSystemWindows="true"
        android:text="@string/logout_report_detail"
        android:textIsSelectable="false"
        android:textSize="12sp"
        android:visibility="visible"
        tools:layout_toEndOf="@+id/textView_rat_reports"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/go_to_report_entry_screen_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/report_a_rat"
        tools:textSize="12sp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <include
        android:id="@+id/report_list"
        layout="@layout/content_report_list"
        android:layout_width="369dp"
        android:layout_height="189dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <TextView
        android:id="@+id/key_view"
        android:layout_width="45dp"
        android:layout_height="166dp"
        android:layout_margin="@dimen/text_margin"
        android:textIsSelectable="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.DropDownItem"
        android:visibility="visible" />

</android.support.design.widget.CoordinatorLayout>
