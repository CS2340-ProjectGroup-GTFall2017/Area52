<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="area52.rat_tracking_application.controllers.EmailReset"
    tools:showIn="@layout/activity_email_reset">

    <Button
        android:id="@+id/button_getPW"
        style="?metaButtonBarButtonStyle"
        android:layout_width="300dp"
        android:layout_height="67dp"
        android:background="@android:color/holo_green_light"
        android:onClick="checkUser"
        android:text="Get Password"
        android:textAlignment="center"
        android:textColor="#efefef"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button_cancel"
        android:layout_alignStart="@+id/button_cancel" />

    <Button
        android:id="@+id/button_cancel"
        style="?metaButtonBarButtonStyle"
        android:layout_width="300dp"
        android:layout_height="67dp"
        android:layout_marginBottom="64dp"
        android:background="#f00f0f"
        android:onClick="backToLoginScreen"
        android:text="Cancel"
        android:textAlignment="center"
        android:textColor="#5f0f0f"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



    <EditText
        android:id="@+id/editText_emailReset"
        android:layout_width="327dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Type your email address here"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_email"
        android:layout_marginTop="38dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText_usernameReset"
        android:layout_width="327dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Type your username here"
        android:inputType="text"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_username"
        android:layout_below="@+id/editText_emailReset"
        android:layout_alignLeft="@+id/editText_emailReset"
        android:layout_alignStart="@+id/editText_emailReset" />



</RelativeLayout>