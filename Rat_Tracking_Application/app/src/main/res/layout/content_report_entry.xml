<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_report_entry"
    style="@style/Base.TextAppearance.AppCompat.Display1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="none"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="area52.rat_tracking_application.controllers.ReportEntryActivity"
    tools:showIn="@layout/activity_report_entry">

    <TextView
        android:id="@+id/unique_key_id"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/borough_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:scrollbars="none"
        android:text="@string/report_id"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignStart="@id/borough_spinner"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/user_name"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none"
        android:text="@string/user_name_string"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/borough_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/location_type_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:background="@android:drawable/spinner_dropdown_background"
        android:dropDownSelector="@android:drawable/spinner_dropdown_background"
        android:entries="?attr/listChoiceBackgroundIndicator"
        android:scrollbars="vertical"
        android:spinnerMode="dropdown"
        android:text="@string/select_borough"
        tools:listitem="@android:layout/simple_spinner_dropdown_item" />

    <Spinner
        android:id="@+id/location_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/address_city_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:background="@android:drawable/spinner_dropdown_background"
        android:dropDownSelector="@android:drawable/spinner_dropdown_background"
        android:entries="?attr/listChoiceBackgroundIndicator"
        android:scrollbars="vertical"
        android:spinnerMode="dropdown"
        android:text="@string/select_location_type"
        tools:listitem="@android:layout/simple_spinner_dropdown_item" />

    <Spinner
        android:id="@+id/address_city_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/zip_code"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/spinner_dropdown_background"
        android:dropDownSelector="@android:drawable/spinner_dropdown_background"
        android:entries="?attr/listChoiceBackgroundIndicator"
        android:scrollbars="vertical"
        android:spinnerMode="dropdown"
        android:text="@string/select_city"
        android:visibility="visible"
        tools:listitem="@android:layout/simple_spinner_dropdown_item" />

    <EditText
        android:id="@+id/zip_code"
        style="@android:style/Widget.DeviceDefault.Light.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="text"
        android:scrollbars="none"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/enter_zip_code"
        android:textAppearance="@style/TextAppearance.Design.Hint" />

    <TextView
        android:id="@+id/address"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/latitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:scrollbars="none"
        android:singleLine="true"
        android:text="@string/address"
        android:textColor="@color/colorPrimaryDark"
        android:textColorLink="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/latitude"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/longitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="none"
        android:singleLine="true"
        android:text="@string/latitude" />

    <TextView
        android:id="@+id/longitude"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:scrollbars="none"
        android:singleLine="true"
        android:text="@string/longitude" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/add_report"
        android:visibility="visible" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/longitude"
        android:text="@string/cancel_report"
        android:visibility="visible" />

</RelativeLayout>
