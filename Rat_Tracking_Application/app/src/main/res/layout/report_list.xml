<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/report_list"
    style="@style/Base.Widget.AppCompat.ListView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@android:drawable/list_selector_background"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:isScrollContainer="true"
    android:saveEnabled="true"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="horizontal|vertical"
    android:theme="@android:style/Widget.DeviceDefault.Light.ScrollView"
    android:visibility="visible"
    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
    tools:context="area52.rat_tracking_application.controllers.ReportListActivity"
    tools:listitem="@layout/content_report_list" />
